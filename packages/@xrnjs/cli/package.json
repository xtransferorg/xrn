{
  "name": "@xrnjs/cli",
  "version": "0.0.6",
  "description": "",
  "main": "lib/build/init.js",
  "type": "commonjs",
  "bin": {
    "xrn": "lib/init.js",
    "xrn-bundle-postinstall": "scripts/postinstall-bundle.js",
    "xrn-native-postinstall": "scripts/postinstall-native.js"
  },
  "files": [
    "bin",
    "lib",
    "files",
    "patches",
    "scripts",
    "react-native.config.js"
  ],
  "scripts": {
    "watch": "nodemon --ignore dist/  --ignore lib/ --ignore node_modules/ --watch ./ -C -e js,jsx,ts,tsx,css,less --debug -x 'npm run dev'",
    "watch:yalc": "nodemon --ignore dist/  --ignore lib/ --ignore node_modules/ --watch ./ -C -e js,jsx,ts,tsx,css,less --debug -x 'npm run build && yalc push'",
    "dev": "tsc && npm run build && npm unlink -g xt-rn-cli && npm link",
    "build": "rm -rf lib && tsc",
    "sync": "rm -rf ../../../apps/$0/node_modules/@xrnjs/cli/lib && cp -r lib ../../../apps/$0/node_modules/@xrnjs/cli/",
    "sync-template": "yarn build && yarn sync xrn-app-template && yarn sync xrn-app-template/main-bundle && yarn sync xrn-app-template/sub-bundle",
    "watch:sync": "nodemon --ignore dist/  --ignore lib/ --ignore node_modules/ --watch ./ -C -e js,jsx,ts,tsx,css,less --debug -x 'npm run sync-template'",
    "codepush:watch": "nodemon --ignore dist/  --ignore lib/ --ignore node_modules/ --watch ./ -C -e js,jsx,ts,tsx,css,less --debug -x 'npm run codepush:build'",
    "codepush:build": "rm -rf lib && tsc  && node lib/codePush/init.js buildCodePush",
    "prepublishOnly": "yarn build",
    "version": "standard-changelog -p angular -i CHANGELOG.md -s"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "xrnjs",
    "xrn"
  ],
  "author": "",
  "license": "Apache-2.0",
  "homepage": "https://github.com/xtransferorg/xrn",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xtransferorg/xrn"
  },
  "resolutions": {
    "@react-native-community/cli": "9.3.3"
  },
  "dependencies": {
    "@react-native-community/cli": "9.3.3",
    "@react-native-oh/react-native-harmony-cli": "0.0.27",
    "@react-native/metro-config": "0.72.12",
    "@sentry/node": "7.120.3",
    "@sentry/tracing": "^7.120.3",
    "@types/git-clone": "0.2.0",
