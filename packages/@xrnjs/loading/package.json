{
  "name": "@xrnjs/loading",
  "version": "0.0.3",
  "description": "提供标准化的加载动画，提升用户体验",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build",
    "prepare": "yarn clean && yarn build",
    "watch": "nodemon --ignore build/ --watch ./src -C -e js,jsx,ts,tsx,css,less --debug -x 'yalc publish --push'"
  },
  "files": [
    "src",
    "build",
    "android",
    "ios",
    "harmony/*.har",
    "harmony/xrn_loading",
    "!harmony/xrn_loading/oh_modules",
    "!harmony/xrn_loading/build",
    "!harmony/xrn_loading/.hvigor",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "keywords": [
    "react-native",
    "xrn",
    "xrn-loading",
    "XRNLoading",
    "xrnjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/xtransferorg/xrn",
  "bugs": {
    "url": "https://github.com/xtransferorg/xrn/issues"
  },
  "author": "",
  "license": "Apache-2.0",
  "homepage": "https://xtransferorg.github.io/xrn/versions/latest/sdk/interface-ui/xrn-loading",
  "dependencies": {
    "@xrnjs/modules-core": "0.0.2"
  },
  "devDependencies": {
    "@react-native-oh/react-native-harmony": "0.72.38",
    "@types/react": "^18.0.25",
    "nodemon": "^3.1.1",
    "react-native": "0.72.5",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "harmony": {
    "codegenConfig": {
      "specPaths": [
        "./src"
      ]
    }
  },
  "xrnMeta": {
    "name": "XrnLoading",
    "title": "加载动画",
    "showName": "加载动画",
    "group": "界面组件",
    "description": "提供标准化的加载动画，提升用户体验",
