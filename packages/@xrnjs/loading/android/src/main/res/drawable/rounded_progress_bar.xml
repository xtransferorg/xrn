<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" /> <!-- Adjust the corner radius as needed -->
            <solid android:color="#EBEBF0" /> <!-- Background color of the progress bar -->
        </shape>
    </item>

    <!-- Progress layer -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="3dp" /> <!-- Match this radius with the background radius -->
                <solid android:color="#F56A00" /> <!-- Color of the progress bar -->
            </shape>
        </clip>
    </item>
</layer-list>